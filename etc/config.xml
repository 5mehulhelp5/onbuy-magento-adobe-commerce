<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">

    <default>

        <carriers>
            <onbuyshipping>
                <active>1</active>
                <allowed_methods>onbuyshipping</allowed_methods>
                <methods>onbuyshipping</methods>
                <sallowspecific>0</sallowspecific>
                <model>M2E\OnBuy\Model\Magento\Shipping</model>
                <name>M2E OnBuy Connect Shipping</name>
                <title>M2E OnBuy Connect Shipping</title>
                <handling_type>F</handling_type>
            </onbuyshipping>
        </carriers>

        <payment>
            <onbuypayment>
                <active>1</active>
                <model>M2E\OnBuy\Model\Magento\Payment</model>
                <order_status>pending</order_status>
                <title>M2E OnBuy Connect Payment</title>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </onbuypayment>
        </payment>

    </default>

</config>
